<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/create_post_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Создание поста"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/publish_post_button"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:text="Опубликовать" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Превью фотографии -->
            <FrameLayout
                android:id="@+id/photo_container"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/post_photo_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:src="@tools:sample/backgrounds/scenic"
                    tools:visibility="visible" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_photo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

            </FrameLayout>

            <!-- Название места -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Название места"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/photo_container">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Город -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Город"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/place_name_layout"
                app:startIconDrawable="@android:drawable/ic_dialog_map">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_city_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Категория/тег -->
            <TextView
                android:id="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Категория:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/place_city_layout" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tag_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintTop_toBottomOf="@id/category_label">

                <com.google.android.material.chip.Chip
                    android:id="@+id/tag_sight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Достопримечательность"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tag_cafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Кафе"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tag_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ресторан"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tag_landscape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пейзаж"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tag_monument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Памятник"
                    android:checkable="true" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Описание места -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Описание места"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/tag_chip_group">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_description_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="4" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout> 